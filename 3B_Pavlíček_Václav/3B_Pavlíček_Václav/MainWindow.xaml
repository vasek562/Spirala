<Window x:Class="SpiralApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spiral Drawer" Height="450" Width="800">
    <Grid>
        <Canvas Name="DrawingCanvas" Background="White" />
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Label Content="Total Spiral Length:"/>
            <TextBox Name="SpiralLengthTextBox" Width="100"/>
            <Label Content="Gap Between Lines:"/>
            <TextBox Name="GapTextBox" Width="100"/>
            <Button Content="Draw Spiral" Click="DrawSpiral_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
